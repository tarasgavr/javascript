<main>
  <section>
    <form
      class='form'
      action='/product-create'
      method='post'
    >
      <h1 class='form__caption'>Створити продукт</h1>
      <label class='form__label'>Назва
        <input
          type='text'
          name='name'
          placeholder='Назва'
          class='form__input'
        />
      </label>
      <label class='form__label'>Ціна
        <input
          type='number'
          name='price'
          placeholder='Ціна'
          class='form__input'
        />
      </label>
      <label class='form__label'>Опис</label>
      <textarea
        name='description'
        placeholder='Опис'
        class='form__input'
      ></textarea>
      <button class='form__button'>Створити</button>
    </form>
  </section>
  <section>
    <form class='form'>
      <h1 class='form__caption'>Список продуктів</h1>
      {{#with data.products}}
        {{#if isEmpty}}
          <div class='form-title'>Порожній</div>
        {{else}}
          <ul>
            {{#each list}}
              <li>{{name}}
                |
                {{price}}
                |
                {{description}}
                |
                {{id}}
                | (<a
                  href='/product-delete?id={{id}}'
                >Видалити</a>)
              </li>
            {{/each}}
          </ul>
        {{/if}}
      {{/with}}
    </form>
  </section>
  <section>
    <form
      class='form'
      action='/product-update'
      method='post'
    >
      <h1 class='form__caption'>Оновити ціну продукту</h1>
      <label class='form__label'>ID
        <input
          type='text'
          name='id'
          placeholder='ID'
          class='form__input'
        />
      </label>
      <label class='form__label'>Нова ціна
        <input
          type='text'
          name='price'
          placeholder='Ціна'
          class='form__input'
        />
      </label>
      <button class='form__button'>Оновити</button>
    </form>
  </section>
</main>