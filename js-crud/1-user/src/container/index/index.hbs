<main>
  <div class='form'>
  </div>
  <form action='/user-create' method='get'>
    <h1 class='form__caption'>Створити користувача</h1>
    <label for='user__email' class='form__label'>Email
      <input
        type='email'
        name='user__email'
        placeholder='Email'
        class='form__input'
      />
    </label>
    <label for='user__login' class='form__label'>Логін
      <input
        type='email'
        name='user__login'
        placeholder='Логін'
        class='form__input'
      />
    </label>
    <label for='user__password' class='form__label'>Пароль
      <input
        type='email'
        name='user__password'
        placeholder='Пароль'
        class='form__input'
      />
    </label>
    <button class='form__button'>Створити</button>
    <h1 class='form__caption'>Список користувачів</h1>
  </form>
</main>

