<main>
  <section>
{{> heading caption='Мої замовлення' blue=true}}
        <div class='card__container'>
          {{#each data}}
            <div class='card'>
              <span class='card-caption'>ID :{{purchaseId}}</span>
              <div class='card-block'>
                <span class='card-caption'>Товари</span>
                <h5>{{purchaseName}}</h5>
              </div>
              <div class='card-block'>
                <span class='card-caption'>Сума замовлення</span>
                <h5>{{price}}&#8372;</h5>
              </div>
              <div class='card-block'>
                <span class='card-caption'>Товари</span>
                <h5>{{purchaseName}}</h5>
              </div>
              <p>{{description}}</p>
              <div>
                <a
                  href='/product-edit?id={{id}}'
                >Редагувати</a>
              </div>
            </div>
          {{/each}}
        </div>
    </div>
    <button class='form__button'>
      <a href='/product-create'>Створити</a>
    </button>
  </section>
</main>